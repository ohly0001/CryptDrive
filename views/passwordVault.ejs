<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>CyptDrive Password Vault</title>
        <script src="/js/passwordVault.js" defer></script>
        <link rel="stylesheet" href="/css/site.css">
    </head>
    <body>
        <%- include('components/nav') %>

        <h1>CyptDrive Password Vault</h1>
        <form>
            <fieldset>
                <legend>Add Password</legend>
                
                <label for="savedUrl">URL</label>
                <input id="savedUrl" type="url" placeholder="https://example.com" size="30" required><br><br>
                
                <label for="savedUser">Username</label>
                <input id="savedUser" type="text" placeholder="abc@email.com" required><br><br>
                
                <label for="savedPassword">Password</label>
                <input id="savedPassword" type="password">

                <button id="passwordPeek" type="button" title="Reveal Pasword">üëÅ</button><br><br>

                <label for="savedLabel">Add Label</label>
                <input id="savedLabel" type="text" title="Whitespace Delimited"><br>
                <div id="savedLabels"></div><br>

                <label for="savedNote">Note</label>
                <input id="savedNote" type="text" multiple><br><br>

                <input type="submit" value="Save">
            </fieldset>
        </form>
        <form>
            <fieldset>
                <legend>Search for Passwords</legend>
                <input id="searchField" type="text" placeholder="Enter URL or tag" title="Accepts Regex Patterns">
                
                <label for="filterLabel">Filter by Label</label>
                <input id="filterLabel" type="text" title="Whitespace Delimited"><br>
                <div id="filterLabels"></div><br>
                
                <input type="submit">üîç</button>
            </fieldset>
        </form>
        <div>
            <button>Select All</button>
            <button>Deselect All</button>
            <button>Add Tag to Selected</button>
            <button>Remove Tag From Selected</button>
            <button>Delete Selected</button>
        </div>
        <div id="passwordContainer"></div>
        <div id="passwordPagination" style="display: flex;">
            <p>Items per page</p>
            <select id="paginationSize">
                <option value="10">10</option>
                <option value="25">25</option>
                <option value="50">50</option>
            </select>
            <p id="paginationSlice">1-10 of 100 Passwords</p>
            <button id="firstPage" title="First Page">‚è™</button>
            <button id="prevPage" title="Previous Page">‚¨ÖÔ∏è</button>
            <input id="currentPageNumber" type="number" value="1" min="1">
            <p id="totalPages"> of 10</p>
            <button id="nextPage" title="Next Page">‚û°Ô∏è</button>
            <button id="lastPage", title="Last Page">‚è©</button>
        </div>
    </body>
</html>